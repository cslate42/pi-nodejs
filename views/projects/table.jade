                                            a(href='#') Example
                    .row
                        .col-xs-12
                            //-.input-group
                                input.tinput.form-control(type='text', placeholder='search: client name, city, state, type....')
                            .col-offset-xs-8.col-xs-4.input-group-btn
                                button.btn.btn-search(type='submit')
                                    i.fa.fa-search
    .container-fluid.table-title
        .row
            .col-xs-8
                h1 Active Projects
            .col-xs-4
                a(href='#')
                    i.icon-icon-asce
