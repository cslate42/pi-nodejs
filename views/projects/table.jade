extends ../includes/layout

block content
    #topnav
        .container-fluid
            .row
                .col-xs-9
                    .tnbutton
                        a.btn.btn-default(href='#{global.REQUEST.slashedUrl}add/') Add Project
                .col-xs-3
                    .navbar.navbar-default(role='navigation')
                        .navbar-header
                            a(role='button', data-toggle='collapse', href='#collapseSort', aria-expanded='false', aria-controls='collapseSort')
                                i.icon-icon-menu
        #collapseSort.collapse
            form(method="post")#sortby
                .container-fluid
                    .row
                        .col-xs-12
                            h3 Sort By
                    .row.sortrow
                        .col-xs-6
                            a.btn.btn-default(role='button', data-toggle='collapse', href='#collapseManager', aria-expanded='false', aria-controls='collapseManager')
                                | Manager 
                                i.icon-icon-arrow-down
                            #collapseManager.collapse
                                ul.nav.nav-pills.nav-stacked
                                    each row in managers
                                        li
                                            label
                                                input(type="checkbox" name="manager_id[]" value="#{row.id}")
                                                | #{row.first} #{row.last}
                        .col-xs-6
                            a.btn.btn-default(role='button', data-toggle='collapse', href='#collapseCity', aria-expanded='false', aria-controls='collapseCity')
                                | City 
                                i.icon-icon-arrow-down
                            #collapseCity.collapse
                                ul.nav.nav-pills.nav-stacked
                                    each row in cities
                                        li
                                            input(type="checkbox" name="city[]" value="#{row.name}")
                                            | #{row.name}
                                    //-
                                        li
                                            a(href='#') Example
                                        li
                                            a(href='#') Example
                                        li
                                            a(href='#') Example
                                        li
                                            a(href='#') Example
                    .row.sortrow
                        .col-xs-6
                            a.btn.btn-default(role='button', data-toggle='collapse', href='#collapseType', aria-expanded='false', aria-controls='collapseType')
                                | Current Phase 
                                i.icon-icon-arrow-down
                            #collapseType.collapse
                                ul.nav.nav-pills.nav-stacked
                                    each row in phases
                                        li
                                            input(type="checkbox" name="current_phase_id[]" value="#{row.id}")
                                            | #{row.name}
                                        
                                    //-
                                        li
                                            a(href='#') Example
                                        li
                                            a(href='#') Example
                                        li
                                            a(href='#') Example
                                        li
                                            a(href='#') Example
                        .col-xs-6
                            a.btn.btn-default(role='button', data-toggle='collapse', href='#collapseState', aria-expanded='false', aria-controls='collapseState')
                                | State 
                                i.icon-icon-arrow-down
                            #collapseState.collapse
                                ul.nav.nav-pills.nav-stacked
                                    each row in states
                                        li
                                            input(type="checkbox" name="state[]" value="#{row.name}")
                                            | #{row.name}
